# Epstein Suite - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Application
CONTACT_EMAIL=your-email@example.com

# Database Configuration
DB_HOST=localhost
DB_NAME=epstein_db
DB_USERNAME=your_database_user
DB_PASSWORD=your_secure_database_password

# OpenAI API (Required for AI features)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your-openai-api-key-here
OPENAI_MODEL=gpt-5-nano

# Admin Panel Authentication
# Used for /admin/ access
ADMIN_USER=admin
ADMIN_PASSWORD=change_this_secure_password

# Optional: Email Notifications (Mailgun)
# Only needed if you want to send email notifications
MAILGUN_DOMAIN=
MAILGUN_API_KEY=
MAILGUN_FROM_EMAIL=

# Optional: Additional AI Providers
# Only needed if you want to use alternative AI services
GEMINI_API_KEY=
DEZGO_API_KEY=
ATELIER_DEZGO_MODEL=

# Optional: Stripe (for future subscription features)
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# Optional: Admin Features
ADMIN_EMAIL=admin@example.com
REPROCESS_TOKEN=

# Beta Mode
BETA_MODE=false
